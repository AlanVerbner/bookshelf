{{=|{ }|=}}

<div class="row-fluid">
	<div class="span12 white-base-panel">
		<div ng-controller="PropertyListCtrl">
			<h3>Properties:</h3>

			<hr />

			<div class="row-fluid">
 				<div class="span12" style="padding-left: 10px;">
 					<form name="newPropertyForm">
 						<tabs>
							<pane ng-repeat="enviroment in enviroments" heading="{{enviroment.name}}" style="padding-top: 10px;">
								<span style="color: black; margin-left: 8px; font-weight: bold;">{{enviroment.description}}</span>
								<table class="table table-hover" style="margin-top: 10px;">
					              <tbody>
					                <tr ng-repeat="property in properties | orderBy:'name'">
					                	<td>{{property.name}}</td>
					                	<td>
					                		<a href="javascript:;" id="{{property.id}}-{{enviroment.name}}" data-name="{{property.id}}-{{enviroment.name}}" editable="true" data-type="text" style="border-bottom: 0px;" data-ng-model="property.values[enviroment.name].value" data-ng-save-action="property.$update()" data-showbuttons="true" data-original-title="Enter Value">{{property.values[enviroment.name].value}}</a>

					                		<i class="icon-remove-sign" style="float: right" ng-click="removeProperty(property)" ></i> 
					                	</td>
					                </tr>
					                <tr style="background-color: whiteSmoke;">
					                	<td>
					                		<input name="newPropertyNameInput" class="input-xlarge" type="text" ng-disabled="!parent" ng-model="newProperty.name" ng-maxlength="50"/>
					                	</td>
					                	<td>
					                		<div class="add-panel" style="margin-top: 0px;">
					                			<i class="icon-resize-small" tooltip="Link Property" ng-click="" ></i>
					                			<i class="icon-resize-full" ui-if="newProperty.valueLinkId" tooltip="Unlink Property" ng-click="" ></i>
									  			<input name="newPropertyValueInput" class="input-xxlarge" type="text" ng-disabled="!parent" ng-model="newProperty.value" ng-maxlength="50"/>
									  			<button ng-click="addProperty(newProperty, enviroment)" ng-disabled="!newProperty.name || !newProperty.value">Add</button>
											</div>
					                	</td>
					                </tr>
					                <tr class="row-borderless" style="background-color: whiteSmoke;">
					                	<td colspan="2">
					                		<div class="ng-invalid-maxlength-msg" ng-show="newPropertyForm.newPropertyValueInput.$error.maxlength">Property name is too long!</div> 
					                	</td>
					                </tr>
					              </tbody>
					            </table>
					    	</pane>
						</tabs>
 					</form>
 				</div>
			</div>

		</div>
		
	</div>
</div>